<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        	<li> <%= link_to 'breweries', breweries_path %> </li>
    		<li> <%= link_to 'beers', beers_path %> </li> 
    		<li> <%= link_to 'ratings', ratings_path %> </li>
    		<li> <%= link_to 'users', users_path %> </li>
    		<li> <%= link_to 'beer_clubs', beer_clubs_path %> </li>
    		<li> <%= link_to 'places', places_path %> </li>
    		<li> <%= link_to 'styles', styles_path %> </li>
    	<% if(current_user == nil) %>
     		<li> <%= link_to 'signIn', new_session_path, method: :get %> </li>
     		<li> <%= link_to 'signUp', new_user_path, method: :get %> </li>
    	<% else %>
    		<li class="dropdown-toggle"> <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_user.username %> <b class="caret"></b></a>
    			<ul class="dropdown-menu">
    				<li> <%= link_to 'my page', user_path(current_user) %>
     				<li> <%= link_to 'rate a beer', new_rating_path %> </li>
     				<li> <%= link_to 'signOut', '/signout', method: :delete %> </li>
     				<li> <%= link_to 'join to a club', new_membership_path %> </li>
     			</ul>
     		</li>
    <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!--<% if not session[:user_id].nil? %>
<p><%= User.find(session[:user_id]).username %> signed in</p>
<% end %>-->

<div class = "container"> <%= yield %> </div>

</body>
</html>