<p id="notice"><%= notice %></p>

<h2>
  <b>Name:</b>
  <%= @brewery.name %>
</h2>

<p>
  <b>Year:</b>
  <%= @brewery.year %>
</p>

<i>
	<b>Number of beers: </b>
	<%= @brewery.beers.count %>
</i>

<p>
	<% @brewery.beers.each do |beer| %>
	<%= link_to beer.name, beer %>
	<% end %>
</p>

<p>
	Has <%= pluralize(@ratings.length, 'rating', 'ratings') %>
	<% if(@ratings.length != 0) %> , average <%= @brewery.average_rating %> <% end %>
</p>

<p>
	<%= link_to 'Edit', edit_brewery_path(@brewery) %>
</p>
