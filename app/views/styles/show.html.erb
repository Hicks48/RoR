<p id="notice"><%= notice %></p>

<h1> <%= @style.name %> </h1>
<p>
  <%= @style.description %>
</p>

<b> beers </b>
<ul>
	<% @style.beers.each do |b| %>
		<li> <%= link_to b.name, beer_path(b) %>  by <%= link_to b.brewery.name, brewery_path(b.brewery) %> </li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_style_path(@style) unless current_user.nil? %>
