<h1>Listing beer_clubs</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beer_clubs.each do |beer_club| %>
  <tr>
    <td><%= beer_club.name %></td>
    <td><%= beer_club.founded %></td>
    <td><%= beer_club.city %></td>
    <td><%= link_to 'Show', beer_club, class:"btn btn-default"%></td>
    <td><%= link_to 'Edit', edit_beer_club_path(beer_club), class:"btn btn-warning" unless current_user.nil? %></td>
    <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" if current_user_is_admin %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Beer club', new_beer_club_path, class:"btn btn-success" unless current_user.nil? %>
