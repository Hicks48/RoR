<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @beer_club.name %>
</p>

<p>
  <b>Founded:</b>
  <%= @beer_club.founded %>
</p>

<p>
  <b>City:</b>
  <%= @beer_club.city %>
</p>


<b> Members: </b>
<ul>
	<% @beer_club.users.each do |u| %>
		<li> <%= link_to u.username, user_path(u) %> </li>
	<% end %>
</ul>

<% if current_user %>
	<% if !@beer_club.users.include?(current_user) %>
		<%= form_for(@membership) do |f| %>
    		<%= f.hidden_field :beer_club_id %>
    		<%= f.submit value:"join the club" %>
 		<% end %>
	<% end %>
	<%= link_to 'Edit', edit_beer_club_path(@beer_club) unless current_user.nil? %>
<% end %>